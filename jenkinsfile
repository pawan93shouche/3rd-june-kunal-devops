pipeline {
    agent {
    node {
        label 'built-in'
        customWorkspace '/home/ec2-user'
    }
}
    
    stages {
        stage('checkout') {
            steps {
                        sh '''
			git clone https://github.com/pawan93shouche/game-of-life.git
			cd game-of-life    
                        '''
               
            }
        }
		stage('build') {
            steps {
			sh 'mvn clean install'
                                            
            }
        }
		stage('Deploy') {
            steps {
			sh ' cp game-of-life/game-of-life-web/target/game-of-life.war /mnt/apache-tomcat-9.0.80/webapps '
                           
            }
        }
        
    }
}
